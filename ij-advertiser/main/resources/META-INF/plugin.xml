<idea-plugin url="https://github.com/kassak/geo-support">
  <id>com.github.kassak.ij-advertiser</id>
  <name>IJ Advertiser</name>
  <description>Allows applications to discover running instances of IDE</description>
  <vendor url="https://github.com/kassak"/>

  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
  </extensions>

  <application-components>
    <component>
      <implementation-class>com.github.kassak.intellij.advertise.AdvertiserService</implementation-class>
    </component>
  </application-components>
</idea-plugin>
